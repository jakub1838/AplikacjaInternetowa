@model AplikacjaInternetowa.DAL.Models.Zajecia

<form asp-action="DodajDoPlanu">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ID" />
    <div class="form-group">
        <label asp-for="ID" class="control-label"></label>
        <input asp-for="ID" class="form-control" />
        <span asp-validation-for="ID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NazwaZajec" class="control-label"></label>
        <input asp-for="NazwaZajec" class="form-control" />
        <span asp-validation-for="NazwaZajec" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TerminZajec" class="control-label"></label>
        <input asp-for="TerminZajec" class="form-control" />
        <span asp-validation-for="TerminZajec" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-primary" />
    </div>
</form>